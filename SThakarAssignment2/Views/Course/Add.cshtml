@model SThakarAssignment2.Entities.Course

@{
    ViewData["Title"] = "Add a new course";
}
<h3>Add a new Course</h3>
@* Form to add the course *@
<form asp-controller="Course" asp-action="AddNewCourse" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Instructor">Instructor</label>
        <input type="text" asp-for="Instructor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomNumber">Room Number</label>
        <input asp-for="RoomNumber" type="text" class="form-control" />
    </div>
    <input type="hidden" asp-for="Students" value="@Model.Students"/>
    <br />
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="Course" asp-action="ViewCourses" class="btn btn-secondary">Cancel</a>
</form>